{

  "manifest_version": 2,
  "name": "SeeColor",
  "version": "1.0",

  "description": "Gives color-blindness data within Firefox Extension format.",

  "icons": {
	  "16": "public/16.png",
	  "32": "public/32.png",
	  "48": "public/48.png",
	  "128": "public/icon.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["SeeColor.js"]
    }
  ],
  
	
  "permissions": [
    "contextMenus",
    "downloads",
    "<all_urls> with fileSystemProvider"
  ],
  
	
  "sidebar_action": {
    "default_icon": "public/32.png",
    "default_title" : "SeeColor Test",
    "default_panel": "sidebar.html"
  }

}


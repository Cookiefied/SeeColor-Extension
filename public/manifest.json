{
	"name": "SeeColor Extension",
	"description": "A Chrome extension that evaluates the color blindness accessibility of images",
	"version": "1.0.0",
	"manifest_version": 3,
	"background": {
	  "service_worker": "background.js"
	},
	"icons": {
	  "16": "16.png",
	  "32": "32.png",
	  "48": "48.png",
	  "128": "icon.png"
	},
	"action": {
	  "default_popup": "popup.html"
	},
	"permissions": [
	  "contextMenus",
	  "activeTab",
	  "storage",
	  "scripting"
	],
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	  }
	]
}
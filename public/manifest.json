{
  "name": "SeeColor Extension",
  "description": "A Firefox extension that evaluates the color blindness accessibility of images",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "permissions": [
    "contextMenus",
    "menus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
